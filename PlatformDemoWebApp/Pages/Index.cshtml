@page
@using PlatformDemoClassLibrary.Models;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<html>
    <body>
        <h1>Customer List</h1>
        <hr/>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <!-- Table Headers -->
                    <th>Customer Id</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Number of Orders</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through Customers -->
                @foreach (Customer customer in Model.Customers)
                {
                    <tr>
                        <!-- Table Data -->
                        <td>@customer.CustomerId</td>
                        <td>@customer.Name</td>
                        <td>@customer.PhoneNumber</td>
                        <!-- Returns total number of order Per Customer -->
                        <td>@Model.Orders.Count(order => order.CustomerId == customer.CustomerId)</td>
                        <!-- Returns the total amount ordered Per Customer -->
                        <td>@Model.Orders.Where(order => order.CustomerId == customer.CustomerId).Sum(order => order.Amount)</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</html>
